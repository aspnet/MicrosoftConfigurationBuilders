<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="SignBinaries" AfterTargets="Build" Condition="'$(SignAssembly)' == 'true'">
    <ItemGroup>
      <FilesToSign Include="$(TargetPath)"  Condition="'$(MSBuildProjectExtension)' != '.nuproj'">
        <Authenticode>Microsoft</Authenticode>
        <StrongName>MsSharedLib72</StrongName>
      </FilesToSign>
    </ItemGroup>

    <ItemGroup>
      <FilesToSign Include="$(NuGetPackTargetFile)" Condition="'$(MSBuildProjectExtension)' == '.nuproj'">
        <Authenticode>NuGet</Authenticode>
      </FilesToSign>
    </ItemGroup>
  </Target>

</Project>